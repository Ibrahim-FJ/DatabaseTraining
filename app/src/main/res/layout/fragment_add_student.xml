<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.AddStudentFragment">


    <EditText
        android:id="@+id/student_name_fragment_add_student"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="98dp"
        android:ems="10"
        android:hint="add name"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/student_age_fragment_add_student"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="62dp"
        android:ems="10"
        android:hint="add age"
        android:inputType="number"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="@+id/student_name_fragment_add_student"
        app:layout_constraintStart_toStartOf="@+id/student_name_fragment_add_student"
        app:layout_constraintTop_toBottomOf="@+id/student_name_fragment_add_student" />

    <Button
        android:id="@+id/save_action_fragment_add_student"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="293dp"
        android:text="Save"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/student_age_fragment_add_student"
        app:layout_constraintStart_toStartOf="@+id/student_age_fragment_add_student"
        app:layout_constraintTop_toBottomOf="@+id/student_age_fragment_add_student" />
</androidx.constraintlayout.widget.ConstraintLayout>
